{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@models/*": ["src/models/*"],
            "@server": ["src/server"],
            "@services/*": ["src/services/*"],
            "@controllers/*": ["src/controllers/*"],
            "@routes/*": ["src/routes/*"]
        },
        "useUnknownInCatchVariables": false
    },
    "include": ["src/**/*.ts", "spec/**/*.ts"],
    "exclude": ["src/public/"]
}
